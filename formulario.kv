# formulario.kv
#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<FormularioChofer>:

    nombre_input: nombre_input
    vehiculo_input: vehiculo_input
    placa_input: placa_input
    fecha_salida_input: fecha_salida_input
    hora_salida_input: hora_salida_input
    ubicacion_inicial_input: ubicacion_inicial_input
    km_inicial_input: km_inicial_input
    observaciones_input: observaciones_input

    orientation: 'vertical'
    padding: 30
    spacing: 40
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Formulario para Choferes"
        font_size: 60
        color: 0, 0.5, 0.8, 1
        bold: True
        size_hint_y: None
        height: 80
        padding_y: 20
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size

    ScrollView:
        do_scroll_x: False
        BoxLayout:
            orientation: 'vertical'
            spacing: 30
            size_hint_y: None
            height: self.minimum_height

            # Nombre del Chofer
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Nombre del Chofer:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: nombre_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Vehículo
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Vehículo:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:  # TextInput para el vehículo
                    id: vehiculo_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Placa
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Placa:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: placa_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Fecha
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Fecha:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: fecha_salida_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)


            # Hora de Salida
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Hora de Salida"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: hora_salida_input
                    multiline: False
                    hint_text: "HH:MM"
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Ubicación Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Ubicación Inicial:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: ubicacion_inicial_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Kilometraje Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Kilometraje Inicial:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: km_inicial_input
                    multiline: False
                    font_size: 40
                    input_filter: 'float'
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Fotos de Inicio
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Fotos de Inicio:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                Button:
                    text: "Subir Imagen"
                    size_hint_x: 0.6
                    font_size: 40
                    background_color: root.btn_km_inicial_color  # Bind to the property
                    on_press: root.seleccionar_foto_km_inicial()

            # Observaciones
            BoxLayout:
                size_hint_y: None
                height: 140  # Adjust as needed
                spacing: 10
                Label:
                    text: "Observaciones:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: observaciones_input
                    multiline: True
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 140
        padding: [0, 0]
        pos_hint: {'center_x': 0.5}
        Button:
            text: "Enviar"
            size_hint_x: 0.5
            size_hint_y: None
            height: 120
            font_size: 60
            background_color: 0, 0.5, 0.8, 1
            color: 1, 1, 1, 1
            on_press: root.enviar_datos()
            disabled: root.enviar_btn_disabled
            canvas.before:
                Color:
                    rgba: 0, 0.4, 0.7, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]