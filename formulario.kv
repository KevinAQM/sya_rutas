# formulario.kv
#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<MainScreen>:
    name: 'main_screen'
    BoxLayout:  # Asegúrate de tener un BoxLayout como root widget dentro de MainScreen
        orientation: 'vertical'
        padding: 50
        spacing: 50
        pos_hint: {'center_y': 0.85}  # Centrar verticalmente

        Label:
            text: "Seleccione una opción:"
            font_size: 60
            color: 0, 0.5, 0.8, 1
            bold: True
            size_hint_y: None
            height: 100

        Button:
            text: "DATOS DE SALIDA"
            font_size: 50
            size_hint_y: None
            height: 200
            background_color: (0, 0.5, 0.8, 1)
            color: (1, 1, 1, 1)
            on_press: root.go_to_salida_form()

        Button:
            text: "DATOS DE LLEGADA"
            font_size: 50
            size_hint_y: None
            height: 200
            background_color: (0, 0.5, 0.8, 1)
            color: (1, 1, 1, 1)
            on_press: root.go_to_llegada_form()

        Label: # Espacio inferior (puedes dejarlo o quitarlo)
            size_hint_y: None
            height: 50

<FormularioSalida>:
    name: 'salida_form'

    nombre_input: nombre_input
    vehiculo_input: vehiculo_input
    placa_input: placa_input
    fecha_salida_input: fecha_salida_input
    hora_salida_input: hora_salida_input
    ubicacion_inicial_input: ubicacion_inicial_input
    km_inicial_input: km_inicial_input
    observaciones_salida_input: observaciones_salida_input
    file_list_layout_inicio: file_list_layout_inicio # Referencia al layout de la lista de archivos de inicio

    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Formulario Datos de Salida"
        font_size: 60
        color: 0, 0.5, 0.8, 1
        bold: True
        size_hint_y: None
        height: 80
        padding_y: 20
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size

    ScrollView:
        do_scroll_x: False
        BoxLayout:
            orientation: 'vertical'
            spacing: 30
            size_hint_y: None
            height: self.minimum_height

            # Nombre del Chofer
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Nombre del Chofer:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: nombre_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Vehículo
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Vehículo:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:  # TextInput para el vehículo
                    id: vehiculo_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Placa
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Placa:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: placa_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Fecha
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Fecha de Salida:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: fecha_salida_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)


            # Hora de Salida
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Hora de Salida"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: hora_salida_input
                    multiline: False
                    hint_text: "HH:MM"
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Ubicación Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Ubicación Inicial:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: ubicacion_inicial_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Kilometraje Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Kilometraje Inicial:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: km_inicial_input
                    multiline: False
                    font_size: 40
                    input_filter: 'float'
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Fotos de Inicio
            BoxLayout:
                orientation: 'vertical' # Cambiado a vertical para el botón y la lista
                size_hint_y: None
                height: 200 # Ajustado para dar mas espacio a la lista
                spacing: 10
                BoxLayout: # BoxLayout horizontal para la etiqueta y el botón
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 70
                    spacing: 10
                    Label:
                        text: "Fotos de Inicio:"
                        size_hint_x: 0.4
                        font_size: 40
                        color: 0, 0, 0, 1
                    Button:
                        text: "Subir Imagen"
                        size_hint_x: 0.6
                        font_size: 40
                        background_color: root.btn_km_inicial_color  # Bind to the property
                        on_press: root.seleccionar_foto_km_inicial()
                BoxLayout: # BoxLayout vertical para la lista de nombres de archivo
                    id: file_list_layout_inicio
                    orientation: 'vertical'
                    size_hint_y: None
                    height: None # Dejar que se ajuste al contenido
                    padding: [20, 0, 0, 0] # Indentación para la lista
                    spacing: 5
                    # Altura dinámica basada en el contenido
                    height: self.minimum_height
                    spacing: 20 # Espacio entre el boton y la lista de archivos

            # Observaciones Salida
            BoxLayout:
                size_hint_y: None
                height: 140  # Adjust as needed
                spacing: 10
                Label:
                    text: "Observ. Salida:"
                    size_hint_x: 0.4
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: observaciones_salida_input
                    multiline: True
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.6
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 140
        padding: [0, 0]
        pos_hint: {'center_x': 0.5}
        Button:
            text: "Enviar Salida"
            size_hint_x: 0.5
            size_hint_y: None
            height: 120
            font_size: 60
            background_color: 0, 0.5, 0.8, 1
            color: 1, 1, 1, 1
            on_press: root.enviar_datos_salida()
            disabled: root.enviar_btn_disabled
            canvas.before:
                Color:
                    rgba: 0, 0.4, 0.7, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

