# formulario.kv
#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<FormularioChofer>:
    fecha_input: fecha_input
    nombre_input: nombre_input
    vehiculo_input: vehiculo_input  # Referencia al TextInput del vehículo
    placa_input: placa_input
    ubicacion_inicial_input: ubicacion_inicial_input
    ubicacion_final_input: ubicacion_final_input
    hora_salida_input: hora_salida_input
    hora_llegada_input: hora_llegada_input
    km_inicial_input: km_inicial_input
    km_final_input: km_final_input
    comentarios_input: comentarios_input

    orientation: 'vertical'
    padding: 30
    spacing: 40
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Formulario para Choferes"
        font_size: 60
        color: 0, 0.5, 0.8, 1
        bold: True
        size_hint_y: None
        height: 80
        padding_y: 20
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size

    ScrollView:
        do_scroll_x: False
        BoxLayout:
            orientation: 'vertical'
            spacing: 30
            size_hint_y: None
            height: self.minimum_height

            # Fecha
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Fecha:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: fecha_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Nombre Chofer
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Nombre Chofer:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: nombre_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Vehículo
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Vehículo:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:  # TextInput para el vehículo
                    id: vehiculo_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Placa
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Placa:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: placa_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Ubicación Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Ubicación Inicial:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: ubicacion_inicial_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Ubicación Final
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Ubicación Final:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: ubicacion_final_input
                    multiline: False
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Hora Salida
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Hora Salida:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: hora_salida_input
                    multiline: False
                    hint_text: "HH:MM"
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Hora Llegada
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Hora Llegada:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: hora_llegada_input
                    multiline: False
                    hint_text: "HH:MM"
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
            # Foto km Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Foto km Inicial:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                Button:
                    text: "Subir Imagen"
                    size_hint_x: 0.7
                    font_size: 40
                    background_color: root.btn_km_inicial_color  # Bind to the property
                    on_press: root.seleccionar_foto_km_inicial()

            # Km Inicial
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Km Inicial:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: km_inicial_input
                    multiline: False
                    font_size: 40
                    input_filter: 'float'
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Foto km Final
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Foto km Final:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                Button:
                    text: "Subir Imagen"
                    size_hint_x: 0.7
                    font_size: 40
                    background_color: root.btn_km_final_color  # Bind to the property
                    on_press: root.seleccionar_foto_km_final()

            # Km Final
            BoxLayout:
                size_hint_y: None
                height: 70
                spacing: 10
                Label:
                    text: "Km Final:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: km_final_input
                    multiline: False
                    font_size: 40
                    input_filter: 'float'
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            # Comentarios
            BoxLayout:
                size_hint_y: None
                height: 140  # Adjust as needed
                spacing: 10
                Label:
                    text: "Comentarios:"
                    size_hint_x: 0.3
                    font_size: 40
                    color: 0, 0, 0, 1
                TextInput:
                    id: comentarios_input
                    multiline: True
                    font_size: 40
                    background_color: 1, 1, 1, 1
                    foreground_color: 0, 0, 0, 1
                    padding: [15, 15]
                    size_hint_x: 0.7
                    canvas.before:
                        Color:
                            rgba: 0, 0.5, 0.8, 1
                        Line:
                            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 140
        padding: [0, 0]
        pos_hint: {'center_x': 0.5}
        Button:
            text: "Enviar"
            size_hint_x: 0.5
            size_hint_y: None
            height: 120
            font_size: 60
            background_color: 0, 0.5, 0.8, 1
            color: 1, 1, 1, 1
            on_press: root.enviar_datos()
            canvas.before:
                Color:
                    rgba: 0, 0.4, 0.7, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]